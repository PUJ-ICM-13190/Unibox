<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/round_button_background_gray"
            android:contentDescription="Volver"
            android:cropToPadding="true"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/boton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Tus productos"
            style="@style/TitleStyleBlack"/>

    </LinearLayout>

    <TextView
        android:id="@+id/title_categorie1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/linearLayout"
        android:text="Light"
        style="@style/TitleStyleBlack"/>

    <ListView
        android:id="@+id/listViewProducts1"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="220dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/title_categorie1"
        android:layout_marginTop="5dp"
        android:dividerHeight="8dp"
        tools:listitem="@layout/list_products_light" />

    <TextView
        android:id="@+id/title_categorie2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/listViewProducts1"
        android:text="Dulces"
        style="@style/TitleStyleBlack"/>

    <ListView
        android:id="@+id/listViewProducts2"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_height="220dp"
        android:layout_below="@+id/title_categorie2"
        android:layout_marginTop="5dp"
        android:dividerHeight="8dp"
        tools:listitem="@layout/list_products_light" />

    <ImageButton
        android:id="@+id/btn_add"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/listViewProducts2"
        android:background="@drawable/round_button_background_rosered"
        android:contentDescription="Agregar"
        android:padding="4dp"
        android:scaleType="centerCrop"
        app:srcCompat="@android:drawable/ic_menu_add" />

</RelativeLayout>
