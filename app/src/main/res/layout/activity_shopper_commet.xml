<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:background="@drawable/rectangle_9"
    android:visibility="visible" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="418dp"
        android:layout_height="381dp"
        android:background="@drawable/dulce">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                tools:layout_marginEnd="24dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="70dp"
                    android:layout_height="53dp"
                    app:srcCompat="@drawable/boton" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="412dp"
                android:layout_height="574dp"
                android:layout_marginTop="300dp"
                android:background="@drawable/rectangle_9">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="204dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="525dp"
                    android:text="Bom Bom Bum"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="112dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="480dp"
                    android:text="Dulces"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="327dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="440dp"
                    android:text="Descripbe tu experiencia (opcional)"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="359dp"
                    android:layout_height="194dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.62"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.35000002"
                    app:srcCompat="@drawable/rectangle_1" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="168dp"
                    android:layout_height="54dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/estrellas"
                    tools:layout_editor_absoluteX="230dp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="298dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="170dp"
                    android:layout_marginEnd="70dp"
                    android:text="Tu feedback es muy valioso para el vendedor."
                    app:layout_constraintBottom_toTopOf="@+id/imageView9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="298dp"
                    android:layout_height="17dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="70dp"
                    android:text="Recuerdalo"
                    app:layout_constraintBottom_toTopOf="@+id/imageView9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="338dp"
                    android:layout_height="60dp"
                    android:background="@drawable/rectangle_12"
                    tools:layout_editor_absoluteX="34dp"
                    tools:layout_editor_absoluteY="396dp">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Publicar comentario"
                        android:textColor="#FFFFFF"
                        android:textSize="27dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>