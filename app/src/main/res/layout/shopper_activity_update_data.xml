<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Activity_Update_User_Profile">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="415dp"
        android:layout_height="893dp"
        android:layout_margin="16dp"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Título -->

            <ImageView
                android:layout_width="413dp"
                android:layout_height="333dp"
                android:background="#C9284F"
                tools:ignore="MissingConstraints">

            </ImageView>

            <ImageView
                android:id="@+id/btn_regresar"
                android:layout_width="39dp"
                android:layout_height="32dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="21dp"
                android:src="@drawable/frame"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Foto de usuario -->

            <TextView
                android:id="@+id/textView_title"
                android:layout_width="232dp"
                android:layout_height="38dp"
                android:layout_marginTop="16dp"
                android:text="Actualizar datos"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.259"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <!-- Nombre de usuario -->
            <TextView
                android:id="@+id/textView_username"
                android:layout_width="117dp"
                android:layout_height="29dp"
                android:text="JOHN DOE"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView_user" />


            <ImageView
                android:id="@+id/imageView_user"
                android:layout_width="200dp"
                android:layout_height="163dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_title"
                app:srcCompat="@drawable/perfilperroeditar" />

            <TextView
                android:id="@+id/textView_role"
                android:layout_width="216dp"
                android:layout_height="27dp"
                android:text="Actualmente eres Comprador"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_username" />


            <TextView
                android:id="@+id/textView_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="60dp"
                android:text="Nuevo Email:"
                android:textAppearance="@style/SubtitleStyleBlack"
                android:textColor="@color/roseRed"
                android:textSize="20sp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_role" />

            <EditText
                android:id="@+id/editText_email"
                android:layout_width="384dp"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rectanglegris"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.258"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_email" />

            <TextView
                android:id="@+id/textView_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="Nuevo teléfono:"
                android:textSize="20sp"
                android:textAppearance="@style/SubtitleStyleBlack"
                android:textColor="@color/roseRed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editText_email" />

            <EditText
                android:id="@+id/editText_phone"
                android:layout_width="387dp"
                android:layout_height="53dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectanglegris"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.428"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_phone" />

            <Button
                android:id="@+id/button_seller_mode"
                android:layout_width="362dp"
                android:layout_height="64dp"
                android:layout_marginTop="22dp"
                android:backgroundTint="#FF6666"
                android:text="Quiero ser vendedor"
                android:textAppearance="@style/ParagraphStyleRoseRed"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.528"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editText_phone" />

            <Button
                android:id="@+id/button_update"
                android:layout_width="360dp"
                android:layout_height="62dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#C9284F"
                android:text="Actualizar"
                android:textAppearance="@style/ParagraphStyleRoseRed"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_seller_mode" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
