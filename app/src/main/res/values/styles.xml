<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilos de Botones -->
    <style name="BtnRed" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/roseRed</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="BtnBlue" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/bg_dark_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Estilo para títulos -->
    <style name="TitleStyleBlack">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TitleStyleRoseRed">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/roseRed</item>
    </style>

    <style name="TitleStyleWhite">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Estilo para subtítulos -->
    <style name="SubtitleStyleGray">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="SubtitleStyleBlack">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Estilo para párrafos -->
    <style name="ParagraphStyleBlack">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ParagraphStyleWhite">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ParagraphStyleRoseRed">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/roseRed</item>
    </style>

    <!-- Estilos para campos de texto -->
    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/border_color_selector</item>
        <item name="hintTextColor">@color/roseRed</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="android:textColor">@color/roseRed</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/rubik_extra_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MessageEdit">
        <item name="android:textColor">@color/black</item>
        <item  name="android:background">@android:color/transparent</item>
    </style>

</resources>