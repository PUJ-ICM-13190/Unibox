        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Estilo para títulos -->
    <style name="TitleStyleBlack">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TitleStyleWhite">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Estilo para subtítulos -->
    <style name="SubtitleStyleGray">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="SubtitleStyleBlack">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">16sp</item>
